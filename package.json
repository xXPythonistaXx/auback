{
  "name": "au-backend",
  "version": "1.2.1",
  "description": "Interface de Aplicação Academia do Universitário",
  "author": "Academia do Universitário",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prepare": "husky install",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "migrate:create": "cross-env MIGRATE_ENV=create migrate-mongo create",
    "migrate:up": "npm run build && env-cmd -f .env migrate-mongo up",
    "migrate:up-prd": "npm run build && env-cmd migrate-mongo up",
    "migrate:down": "env-cmd -f .env migrate-mongo down",
    "migrate:down-prd": "env-cmd migrate-mongo down",
    "migrate:status": "env-cmd migrate-mongo status",
    "heroku-postbuild": "npm run build && migrate-mongo up",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/src/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --detectOpenHandles --colors --forceExit --runInBand",
    "test:watch": "jest --watch --colors",
    "test:cov": "jest --coverage --detectOpenHandles --forceExit",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --colors --detectOpenHandles --config ./test/jest-e2e.config.ts --forceExit"
  },
